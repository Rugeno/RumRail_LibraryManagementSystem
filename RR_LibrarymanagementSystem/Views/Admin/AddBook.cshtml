@model RR_LibraryManagementSystem.DataAccess.Domain.BookDetails_VM;
@{
    Layout = "AdminLayout/_AdminLayout";
}

<section class="section">
    <div class="section-header">
        <h1>Books</h1>
        <div class="section-header-breadcrumb">
            <div class="breadcrumb-item active"><a href="#">Dashboard</a></div>
            <div class="breadcrumb-item">Car</div>
        </div>
    </div>

    <div class="section-body">
        <div class="row">
            <div class="col-12 col-md-6 col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <form method="post" class="needs-validation" enctype="multipart/form-data">
                            <div class="form-group">
                                <label>Book Title</label>
                                <input type="text" asp-for="BookName" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Author</label>
                                <input type="text" asp-for="Author" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Description</label>
                                <textarea asp-for="Description" class="form-control" required></textarea>
                            </div>
                            <div class="form-group">
                                <label>Stock Number</label>
                                <input type="number" maxlength="5" asp-for="Stock" class="form-control" required>
                            </div>
                            <div class="form-group">
                                <label>Upload Image</label>
                                <input asp-for="UploadImage" class="form-control" required>
                            </div>

                            <div class="card-footer">
                                <a asp-controller="Admin" asp-action="BookIndex" class="btn btn-primary text-white">Back to List</a>
                                <button type="submit" class="btn btn-primary text-white">Add Book</button>

                            </div>

                        </form>
                    </div>
                </div>

            </div>

        </div>
    </div>
</section>